@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section>
    <div class="container">
        <div class="row">
            <div id="main" class="col-4 p-4"></div>
            <!-- Center Content -->
            <div id="main" class="col-4 p-4">
                <div class="mx-auto mt-3 text-center">
                    <img src="~/images/sample-logo.png" alt="Sample Logo">
                </div>
                <div class="mx-auto mt-3">
                    <h4 class="text-center">Welcome to Launchpad</h4>
                </div>
                <form class="mt-3" method="post">
                    <div class="alert alert-warning" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Input.Username">Enter Your Email Address</label>
                        <input asp-for="Input.Username" class="form-control form-control-md" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Enter Your Password</label>
                        <input asp-for="Input.Password" class="form-control form-control-md" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mt-4 mb-3">
                        <button type="submit" class="btn btn-secondary btn-small btn-block">Login</button>
                    </div>
                    <div class="small text-center">
                        <a asp-page="./ForgotPassword">Forgot Password?</a> |
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </div>
                </form>
            </div>
            <div id="main" class="col-4 p-4"></div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
