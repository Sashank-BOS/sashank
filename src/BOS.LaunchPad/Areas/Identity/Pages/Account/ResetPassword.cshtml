@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<section>
    <div class="container">
        <div class="row">
            <div id="main" class="col-4 p-4"></div>
            <!-- Center Content -->
            <div id="main" class="col-4 p-4">
                <div class="mx-auto mt-3" id="loginlogo">

                </div>
                <div class="mx-auto mt-3">
                    <h4 class="text-center">Reset your password</h4>
                </div>
                <form class="mt-3" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Input.Email">Enter Your Email Address</label>
                        <input asp-for="Input.Email" class="form-control form-control-md" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Enter Your Password</label>
                        <input asp-for="Input.Password" class="form-control form-control-md" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mt-4 mb-3">
                        <button type="submit" class="btn btn-secondary btn-small btn-block">Reset</button>
                    </div>
                </form>
            </div>
            <div id="main" class="col-4 p-4"></div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
