@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<section>
    <div class="container">
        <div class="row">
            <div id="main" class="col-4 p-4"></div>
            <!-- Center Content -->
            <div id="main" class="col-4 p-4">
                <div class="mx-auto mt-3 text-center">
                    <img src="~/images/sample-logo.png" alt="Sample Logo">
                </div>
                <div class="mx-auto mt-3">
                    <h4 class="text-center">Reset Your Password</h4>
                </div>
                <form class="mt-3" method="post">
                    <div class="alert alert-primary">
                        Having trouble remembering yet another password? Enter your email address below and we'll send you an email with instructions for resetting your password:
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Enter Your Email Address</label>
                        <input asp-for="Input.Email" class="form-control form-control-md" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mt-4 mb-3">
                        <button type="submit" class="btn btn-secondary btn-small btn-block">Reset Password</button>
                    </div>
                    <div class="small pt-2 text-center">
                        or <a asp-page="./Login">Login</a>
                    </div>
                </form>
            </div>
            <div id="main" class="col-4 p-4"></div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
